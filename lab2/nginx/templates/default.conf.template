server {
    listen 80;
    server_name _;

    include /etc/nginx/mime.types;
    sendfile on;
    charset utf8;
    autoindex off;

    location ~ ^/(admin|api)/?(.*)$ {
        proxy_pass http://backend_service:8000;
        proxy_set_header Host $host;
    }  

    location /static {
        alias /staticfiles;
    }
}